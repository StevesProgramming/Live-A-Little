<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:paddingTop="13dp"
    tools:context=".Signup">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/incomplete_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/outline"
        android:foreground="@drawable/outline"
        android:text="@string/last_30_days"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="507dp" />
        <!--tools:listitem="@layout/home_card_design"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#0075FF"
        android:backgroundTint="#0075FF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/house" />

        <ImageButton
            android:id="@+id/achievements_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/achievements" />

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/button_blue"
        android:backgroundTint="@color/button_blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:background="@color/tab_colour"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <ImageView
            android:id="@+id/achievements_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:layout_marginLeft="2dp"
            android:background="@color/button_blue"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <ImageView
            android:id="@+id/profile_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:layout_marginLeft="1dp"
            android:background="#0075FF"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />
    </LinearLayout>

</LinearLayout>