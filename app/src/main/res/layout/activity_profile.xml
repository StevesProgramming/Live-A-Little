<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:paddingTop="13dp"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/top_nav_background"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2.5dp"
            android:background="@drawable/top_nav_background" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/top_nav_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:srcCompat="@drawable/top_nav_background">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/friends_list"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <View
            android:layout_width="240dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#BF000000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/friends_design"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:fontFamily="@font/inter"
        android:text="@string/logout"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/delete_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter"
        android:text="@string/delete_account"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="31dp"
        android:background="#0075FF"
        android:backgroundTint="#0075FF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/house" />

        <ImageButton
            android:id="@+id/achievements_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/achievements" />

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/button_blue"
        android:backgroundTint="@color/button_blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:background="@color/button_blue"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <ImageView
            android:id="@+id/achievements_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:layout_marginLeft="2dp"
            android:background="@color/button_blue"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <ImageView
            android:id="@+id/profile_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:layout_marginLeft="1dp"
            android:background="#0075FF"
            android:backgroundTint="@color/tab_colour"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />
    </LinearLayout>

</LinearLayout>