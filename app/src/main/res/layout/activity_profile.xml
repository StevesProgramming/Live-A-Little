<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50A0FF"
    android:orientation="vertical"
    android:paddingTop="13dp"
    tools:context=".Signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#0075FF"
        android:backgroundTint="#0075FF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/house" />

        <ImageButton
            android:id="@+id/achievements_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/achievements" />

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/button_blue"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/button_blue"
        android:backgroundTint="@color/button_blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:background="@color/button_blue"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <ImageView
            android:id="@+id/achievements_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:layout_marginLeft="2dp"
            android:background="@color/button_blue"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />

        <ImageView
            android:id="@+id/profile_tab_image_view"
            android:layout_width="136dp"
            android:layout_height="5dp"
            android:layout_marginLeft="1dp"
            android:background="#0075FF"
            android:backgroundTint="@color/tab_colour"
            android:paddingLeft="50dp"
            android:paddingTop="15dp" />
    </LinearLayout>

</LinearLayout>